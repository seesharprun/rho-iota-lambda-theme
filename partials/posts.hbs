<section class="no-padding" id="projects">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Recent Projects</h2>
                <hr class="primary">
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row spec no-gutter">
            {{#foreach posts}}
                <div class="col-lg-4 col-sm-6 {{post_class}}" style="height: 300px;">
                    <a href="{{url}}" class="portfolio-box">
                        <img src="{{image}}" class="img-responsive" alt="">
                        <div class="portfolio-box-caption">
                            <div class="portfolio-box-caption-content">
                                <div class="project-category text-faded">
                                    {{{title}}}
                                </div>
                                <div class="project-name">
                                    {{excerpt words="15"}}
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            {{/foreach}}
        </div>
    </div>
</section>

