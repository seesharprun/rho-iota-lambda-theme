{{!< default}}

{{#post}}
 
{{#if image}}
    <header style ="background-image: url('{{image}}');">
        <div class="header-content">
            <div class="header-content-inner">
                <h1 style="font-size: 65px;">{{title}}</h1>
                <hr />
                {{#if meta_description}}
                <p>
                    {{meta_description}}                    
                </p>
                {{/if}}
                <a href="#read" class="btn btn-primary btn-xl page-scroll">Read More</a>
            </div>
        </div>
    </header>
{{/if}}

<section id="read">
    <article class="container {{post_class}}">
        <h1 class="text-center">{{title}}</h1>
        <p class="text-center">
            <small><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time> {{tags prefix=" on "}}</small>
        </p>
        <hr>
        {{content}}
    </article>
</section>

{{/post}}